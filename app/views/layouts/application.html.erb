<!DOCTYPE html>
<html>
<head>
  <title>CompraEVenda</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>"><%= t 'layout.system_name' %></a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t 'layout.negotiations' %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="<%= new_negotiation_url %>"><%= t 'layout.new_negotiation' %></a></li>
            <li><a href="<%= negotiations_path %>"><%= t 'layout.negotiations' %></a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t 'layout.registers' %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="<%= products_path %>"><%= t 'layout.products' %></a></li>
            <li><a href="<%= negotiationtypes_path %>"><%= t 'layout.negotiationtypes' %></a></li>
            <li role="separator" class="divider"></li>
            <li><a href="https://comprasevendas.herokuapp.com/pt/about"><%= t 'layout.about' %></a></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
</html>
