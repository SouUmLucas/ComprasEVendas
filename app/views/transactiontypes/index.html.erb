<h1>Tipos de transação</h1>

<div id="content">
  <div id="tabela" class="table-responsive">
    <table class="table-striped">
      <thead>
        <tr>
          <th><%= t 'transactiontypes.id' %></th>
          <th><%= t 'transactiontypes.description' %></th>
          <th colspan="10"></th>
        </tr>
      </thead>

      <tbody>
        <% @transactiontypes.each do |transactiontype| %>
          <tr>
            <td><%= transactiontype.id %></td>
            <td><%= transactiontype.description %></td>

            <td>
              <div class="btn-group" role="group">
                <%= link_to t('layout.view'), transactiontype, class: 'btn btn-default btn-reponsive' %>
                <%= link_to t('layout.editing'), edit_transactiontype_path(transactiontype), class: 'btn btn-default btn-responsive' %>
                <%= link_to t('layout.delete'), transactiontype, method: :delete, class: 'btn btn-danger btn-responsive', data:{confirm: 'Você tem certeza?'} %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>