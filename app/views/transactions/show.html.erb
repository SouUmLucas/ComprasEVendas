<div id="content">
  <h1>Transação <%= @transaction.id %></h1>

  <ul>
    <li>Produto: <%= @transaction.product_id %></li>
    <li>Preço: <%= @transaction.product_price %></li>
    <li>Quantidade <%= @transaction.amount %></li>
    <li>Total <%= @transaction.total_price %></li>
  </ul>
</div>

<div align="center">
  <div class="btn-group" role="group" aria-label="Navigation">
    <%= link_to 'Editar transação', edit_transaction_path(@transaction), class: 'btn btn-primary' %>
    <%= link_to 'Home', transactions_url, class: 'btn btn-primary' %>
  </div>
</div>